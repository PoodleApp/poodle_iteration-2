{
  "name": "poodle-service",
  "version": "0.1.3",
  "description": "Abstracts IMAP interactions, such as downloading entire threads; provides transparent caching",
  "main": "lib/index.js",
  "repository": {
    "url": "https://github.com/PoodleApp/poodle-service",
    "type": "git"
  },
  "bugs": {
    "url": "https://github.com/PoodleApp/poodle-service/issues"
  },
  "homepage": "https://github.com/PoodleApp/poodle-service#readme",
  "author": "Jesse Hallett <jesse@sitr.us>",
  "license": "Apache-2.0",
  "scripts": {
    "test": "babel-node test/index.js",
    "build": "make",
    "build:watch": "watch 'yarn run build' src",
    "prepublishOnly": "npm test && npm run build",
    "prepublish": "(not-in-publish && echo 'Skipping prepublish') || npm run require-npm4-to-publish",
    "require-npm4-to-publish": "semver -r '>=4.0.0' $(npm --version) || (echo 'NPM 4+ required to publish' && exit 1)"
  },
  "babel": {
    "presets": [
      "react",
      "stage-3",
      [
        "env",
        {
          "targets": {
            "electron": "1.6"
          }
        }
      ]
    ]
  },
  "dependencies": {
    "arfe": "link:../arfe",
    "base64-stream": "^0.1.3",
    "cache-directory": "^1.1.0",
    "dateformat": "^2.0.0",
    "googleapis": "^14.2.0",
    "imap": "^0.8.18",
    "libqp": "^1.1.0",
    "mailparser": "^2.0.1",
    "node-fetch": "^1.6.3",
    "pouchdb-find": "^0.10.5",
    "pouchdb-node": "^6.1.1",
    "sanitize-filename": "^1.6.1",
    "stream-to-promise": "^2.2.0",
    "xoauth2": "^1.2.0"
  },
  "devDependencies": {
    "format-json": "^1.0.3",
    "in-publish": "^2",
    "watch": "^1"
  },
  "files": [
    "lib/"
  ],
  "peerDependencies": {
    "kefir": "*"
  }
}
