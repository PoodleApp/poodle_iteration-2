{
  "name": "poodle-electron",
  "version": "0.2.3",
  "description": "Desktop version of Poodle, an email client with social features",
  "main": "lib/main/index.js",
  "repository": "git+https://github.com/PoodleApp/poodle-electron.git",
  "author": "Jesse Hallett <jesse@sitr.us>",
  "license": "Apache-2.0",
  "scripts": {
    "prestart": "make",
    "start": "NODE_ENV=development electron .",
    "pretest": "make",
    "test": "../../node_modules/.bin/flow",
    "build": "make",
    "build:watch": "../../node_modules/.bin/watch make src",
    "pack": "make && electron-builder --dir",
    "dist": "make && electron-builder",
    "postinstall": "make && electron-builder install-app-deps",
    "prepublishOnly": "yarn test && make"
  },
  "bin": {
    "poodle": "./bin/poodle"
  },
  "babel": {
    "presets": [
      "react",
      "stage-3",
      [
        "env",
        {
          "targets": {
            "electron": "1.7"
          }
        }
      ]
    ]
  },
  "build": {
    "mac": {
      "category": "public.app-category.productivity"
    },
    "productName": "Poodle",
    "publish": [
      {
        "provider": "github",
        "owner": "PoodleApp",
        "repo": "poodle"
      }
    ]
  },
  "dependencies": {
    "arfe": "link:../arfe",
    "electron-context-menu": "^0.9.1",
    "electron-remote": "^1.2.0",
    "history": "^4.6.1",
    "kefir": "3.8.1",
    "keytar": "^3.0.2",
    "marked": "^0.3.6",
    "material-ui": "^0.19.0",
    "material-ui-search-bar": "^0.4.0",
    "moment": "^2.18.1",
    "opn": "^5.0.0",
    "poodle-core": "link:../poodle-core",
    "poodle-service": "link:../poodle-service",
    "query-string": "^5.0.0",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-dropzone": "^4.2.7",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.1.2",
    "react-router-redux": "next",
    "react-tap-event-plugin": "^2.0.1",
    "redux": "^3.7.2",
    "redux-logger": "^3.0.6",
    "redux-saga": "^0.15.6",
    "repa": "^1.0.0",
    "string-hash": "^1.1.3",
    "tmp": "^0.0.33",
    "vocabs-as": "^2"
  },
  "devDependencies": {
    "ava": "^0.20.0",
    "electron": "1.8.2-beta.5",
    "electron-builder": "^19.55.3",
    "electron-devtools-installer": "^2.2.3",
    "react-test-renderer": "^15.6.1"
  },
  "files": [
    "bin/",
    "lib/",
    "public/"
  ]
}
