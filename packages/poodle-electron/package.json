{
  "name": "poodle-electron",
  "version": "0.2.3",
  "description": "Desktop version of Poodle, an email client with social features",
  "main": "lib/main/index.js",
  "repository": "git+https://github.com/PoodleApp/poodle-electron.git",
  "author": "Jesse Hallett <jesse@sitr.us>",
  "license": "Apache-2.0",
  "scripts": {
    "prestart": "make",
    "start": "NODE_ENV=development electron .",
    "pretest": "make",
    "test": "flow",
    "prebuild": "make -C ../arfe && make -C ../poodle-service && make -C ../poodle-core",
    "build": "make",
    "build:watch": "watch 'yarn run build' src",
    "pack": "make && electron-builder --dir",
    "dist": "make && electron-builder",
    "prepublishOnly": "yarn test && make",
    "postinstall": "../../scripts/postinstall && electron-builder install-app-deps"
  },
  "bin": {
    "poodle": "./bin/poodle"
  },
  "babel": {
    "plugins": [
      "@babel/plugin-proposal-object-rest-spread"
    ],
    "presets": [
      "@babel/preset-flow",
      "@babel/preset-react",
      [
        "@babel/preset-env",
        {
          "targets": {
            "electron": "1.8"
          }
        }
      ]
    ]
  },
  "build": {
    "mac": {
      "category": "public.app-category.productivity"
    },
    "productName": "Poodle",
    "publish": [
      {
        "provider": "github",
        "owner": "PoodleApp",
        "repo": "poodle"
      }
    ]
  },
  "dependencies": {
    "activitystrea.ms": "hallettj/activitystrea.ms#fix/template-idempotency",
    "arfe": "*",
    "electron-context-menu": "^0.9.1",
    "electron-remote": "^1.2.0",
    "history": "^4.6.1",
    "kefir": "^3.8.3",
    "keytar": "^4.2.1",
    "marked": "^0.3.6",
    "material-ui": "^0.19.0",
    "material-ui-search-bar": "^0.4.0",
    "moment": "^2.18.1",
    "open": "^0.0.5",
    "opn": "^5.0.0",
    "poodle-core": "*",
    "poodle-service": "*",
    "prop-types": "^15.6.1",
    "query-string": "^5.0.0",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-dropzone": "^4.2.7",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.1.2",
    "react-router-redux": "next",
    "react-tap-event-plugin": "^2.0.1",
    "redux": "^3.7.2",
    "redux-logger": "^3.0.6",
    "redux-saga": "^0.15.6",
    "repa": "^1.0.0",
    "string-hash": "^1.1.3",
    "tmp": "^0.0.33",
    "uuid": "^3.2.1",
    "vocabs-as": "^2"
  },
  "devDependencies": {
    "@babel/cli": "7.0.0-beta.44",
    "@babel/core": "7.0.0-beta.44",
    "@babel/plugin-proposal-object-rest-spread": "7.0.0-beta.44",
    "@babel/preset-env": "7.0.0-beta.44",
    "@babel/preset-flow": "7.0.0-beta.44",
    "@babel/preset-react": "7.0.0-beta.44",
    "@babel/register": "7.0.0-beta.44",
    "electron": "^1.8.2",
    "electron-builder": "^20.0.7",
    "electron-devtools-installer": "^2.2.3",
    "flow-bin": "^0.73.0",
    "react-test-renderer": "^15.6.1"
  },
  "files": [
    "bin/",
    "index.html",
    "lib/",
    "main.css"
  ]
}
