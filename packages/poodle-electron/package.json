{
  "name": "poodle-electron",
  "version": "0.1.0",
  "description": "Desktop version of Poodle, an email client with social features",
  "main": "index.js",
  "repository": "git+https://github.com/PoodleApp/poodle-electron.git",
  "author": "Jesse Hallett <jesse@sitr.us>",
  "license": "Apache-2.0",
  "scripts": {
    "start": "electron .",
    "test": "babel-node test/index.js",
    "build": "make",
    "build:watch": "watch 'yarn run build' src",
    "prepublishOnly": "yarn test && yarn run build",
    "prepublish": "(not-in-publish && echo 'Skipping prepublish') || npm run require-npm4-to-publish",
    "require-npm4-to-publish": "semver -r '>=4.0.0' $(npm --version) || (echo 'NPM 4+ required to publish' && exit 1)"
  },
  "babel": {
    "presets": [
      "react",
      "stage-3",
      "node7"
    ]
  },
  "dependencies": {
    "apollo-client": "^1.0.0-rc.2",
    "graphql-imap": "PoodleApp/graphql-imap",
    "keytar": "^3.0.2",
    "marked": "^0.3.6",
    "material-ui": "^0.17.0",
    "moment": "^2.17.1",
    "react": "^15.4.2",
    "react-apollo": "^1.0.0-rc.2",
    "react-dom": "^15.4.2",
    "react-redux": "^5.0.3",
    "react-router-dom": "^4.0.0",
    "react-tap-event-plugin": "^2.0.1",
    "redux": "^3.6.0",
    "redux-logger": "^2.8.2",
    "redux-saga": "^0.14.3",
    "repa": "^1.0.0",
    "string-hash": "^1.1.3",
    "vocabs-as": "^2.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-preset-node7": "^1.4.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-3": "^6.17.0",
    "electron": "1.5.1",
    "flow-bin": "^0.41.0",
    "in-publish": "^2.0.0",
    "watch": "^1.0.1"
  }
}
