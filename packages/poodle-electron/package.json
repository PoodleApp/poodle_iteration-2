{
  "name": "poodle-electron",
  "version": "0.2.0",
  "description": "Desktop version of Poodle, an email client with social features",
  "main": "index.js",
  "repository": "git+https://github.com/PoodleApp/poodle-electron.git",
  "author": "Jesse Hallett <jesse@sitr.us>",
  "license": "Apache-2.0",
  "scripts": {
    "start": "NODE_ENV=development electron .",
    "test": "flow",
    "build": "make",
    "build:watch": "watch 'yarn run build' src",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "make && electron-builder install-app-deps",
    "prepublishOnly": "yarn test && yarn run build",
    "prepublish": "(not-in-publish && echo 'Skipping prepublish') || npm run require-npm4-to-publish",
    "release": "make && electron-builder",
    "require-npm4-to-publish": "semver -r '>=4.0.0' $(npm --version) || (echo 'NPM 4+ required to publish' && exit 1)"
  },
  "bin": {
    "poodle": "./bin/poodle"
  },
  "babel": {
    "presets": [
      "react",
      "stage-3",
      [
        "env",
        {
          "targets": {
            "electron": "1.7"
          }
        }
      ]
    ]
  },
  "build": {
    "mac": {
      "category": "public.app-category.productivity"
    },
    "productName": "Poodle",
    "publish": [{
      "provider": "github",
      "owner": "hallettj"
    }]
  },
  "dependencies": {
    "arfe": "link:../arfe",
    "electron-context-menu": "^0.9.1",
    "history": "^4.6.1",
    "kefir": "^3.7.3",
    "keytar": "^3.0.2",
    "marked": "^0.3.6",
    "material-ui": "^0.18.1",
    "moment": "^2.18.1",
    "opn": "^5.0.0",
    "poodle-core": "link:../poodle-core",
    "poodle-service": "link:../poodle-service",
    "query-string": "^5.0.0",
    "react": "^15.6.1",
    "react-dom": "^15.5.4",
    "react-redux": "^5.0.5",
    "react-router-dom": "^4.1.1",
    "react-router-redux": "next",
    "react-tap-event-plugin": "^2.0.1",
    "redux": "^3.7.2",
    "redux-fractal": "^1",
    "redux-logger": "^3.0.6",
    "redux-saga": "^0.15.6",
    "repa": "^1.0.0",
    "string-hash": "^1.1.3",
    "vocabs-as": "^2"
  },
  "devDependencies": {
    "ava": "^0.20.0",
    "electron": "^1.7.5",
    "electron-builder": "^19.19.1",
    "electron-devtools-installer": "^2.2.0",
    "in-publish": "^2",
    "react-test-renderer": "^15",
    "watch": "^1"
  },
  "files": [
    "bin/",
    "index.js",
    "index.html",
    "lib/",
    "main.css"
  ]
}
