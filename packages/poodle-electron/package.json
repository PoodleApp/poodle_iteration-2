{
  "name": "poodle-electron",
  "version": "0.1.3",
  "description": "Desktop version of Poodle, an email client with social features",
  "main": "index.js",
  "repository": "git+https://github.com/PoodleApp/poodle-electron.git",
  "author": "Jesse Hallett <jesse@sitr.us>",
  "license": "Apache-2.0",
  "scripts": {
    "start": "electron .",
    "test": "flow",
    "build": "make",
    "build:watch": "watch 'yarn run build' src",
    "postinstall": "electron-rebuild",
    "prepublishOnly": "yarn test && yarn run build",
    "prepublish": "(not-in-publish && echo 'Skipping prepublish') || npm run require-npm4-to-publish",
    "require-npm4-to-publish": "semver -r '>=4.0.0' $(npm --version) || (echo 'NPM 4+ required to publish' && exit 1)"
  },
  "bin": {
    "poodle": "./bin/poodle"
  },
  "babel": {
    "presets": [
      "react",
      "stage-3",
      [
        "env",
        {
          "targets": {
            "electron": "1.6"
          }
        }
      ]
    ]
  },
  "dependencies": {
    "arfe": "^0.1.0",
    "electron": "^1.6.8",
    "electron-context-menu": "^0.9.0",
    "electron-rebuild": "^1.5.11",
    "history": "^4.6.1",
    "kefir": "^3.7.1",
    "keytar": "^3.0.2",
    "marked": "^0.3.6",
    "material-ui": "^0.18.1",
    "moment": "^2.18.1",
    "opn": "^5.0.0",
    "poodle-core": "^0.1.2",
    "poodle-service": "^0.1.3",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-redux": "^5.0.5",
    "react-router-dom": "^4.1.1",
    "react-router-redux": "next",
    "react-tap-event-plugin": "^2.0.1",
    "redux": "^3.6.0",
    "redux-fractal": "^1.7.1",
    "redux-logger": "^3.0.6",
    "redux-saga": "^0.15.3",
    "repa": "^1.0.0",
    "string-hash": "^1.1.3",
    "vocabs-as": "^2.0.0"
  },
  "devDependencies": {
    "ava": "^0.20.0",
    "babel-cli": "^6.24.1",
    "babel-preset-env": "^1.4.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-3": "^6.24.1",
    "flow-bin": "^0.46.0",
    "in-publish": "^2.0.0",
    "prettier-standard": "^5.0.0",
    "react-test-renderer": "^15.6.1",
    "watch": "^1.0.2"
  },
  "files": [
    "bin/",
    "index.js",
    "index.html",
    "lib/",
    "main.css"
  ]
}
