{
  "name": "poodle-core",
  "version": "0.1.2",
  "description": "Experimental email client with social features (reusable components)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PoodleApp/poodle-core.git"
  },
  "keywords": [
    "email"
  ],
  "author": "Jesse Hallett <jesse@sitr.us>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/PoodleApp/poodle-core/issues"
  },
  "homepage": "https://github.com/PoodleApp/poodle-core#readme",
  "main": "lib/index.js",
  "scripts": {
    "test": "ava",
    "build": "make",
    "build:watch": "watch 'yarn run build' src",
    "prepublishOnly": "yarn test && yarn run build",
    "postinstall": "../../scripts/postinstall"
  },
  "babel": {
    "plugins": [
      "@babel/plugin-proposal-object-rest-spread"
    ],
    "presets": [
      "@babel/preset-flow",
      "@babel/preset-react",
      [
        "@babel/preset-env",
        {
          "targets": {
            "electron": "1.8"
          }
        }
      ]
    ]
  },
  "ava": {
    "color": false,
    "files": [
      "test/**/*_test.js"
    ],
    "sources": [
      "src/**/*.js"
    ],
    "require": [
      "@babel/register"
    ]
  },
  "dependencies": {
    "arfe": "*",
    "deep-equal": "^1.0.1",
    "filereader-stream": "^1.0.0",
    "lodash.mapvalues": "^4.6.0",
    "poodle-service": "*",
    "process-nextick-args": "^1.0.7",
    "prop-types": "^15.5.10",
    "react-router-redux": "^5.0.0-alpha.9",
    "string-to-stream": "^1.1.0",
    "tmp": "^0.0.33"
  },
  "devDependencies": {
    "@babel/cli": "7.0.0-beta.44",
    "@babel/core": "7.0.0-beta.44",
    "@babel/plugin-proposal-object-rest-spread": "7.0.0-beta.44",
    "@babel/preset-env": "7.0.0-beta.44",
    "@babel/preset-flow": "7.0.0-beta.44",
    "@babel/preset-react": "7.0.0-beta.44",
    "@babel/register": "7.0.0-beta.44",
    "ava": "1.0.0-beta.4",
    "flow-bin": "^0.73.0",
    "react-test-renderer": "^15.6.1"
  },
  "files": [
    "lib/"
  ],
  "peerDependencies": {
    "kefir": "^3.8.1",
    "react-redux": "*",
    "redux": "*",
    "redux-saga": "*"
  }
}
