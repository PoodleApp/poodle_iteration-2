{
  "name": "poodle-core",
  "version": "0.1.0",
  "description": "Experimental email client with social features",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PoodleApp/poodle-core.git"
  },
  "keywords": [
    "email"
  ],
  "author": "Jesse Hallett <jesse@sitr.us>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/PoodleApp/poodle-core/issues"
  },
  "homepage": "https://github.com/PoodleApp/poodle-core#readme",
  "main": "lib/index.js",
  "scripts": {
    "build": "make",
    "build:watch": "watch 'yarn run build' src",
    "prepublishOnly": "yarn test && yarn run build",
    "prepublish": "(not-in-publish && echo 'Skipping prepublish') || npm run require-npm4-to-publish",
    "require-npm4-to-publish": "semver -r '>=4.0.0' $(npm --version) || (echo 'NPM 4+ required to publish' && exit 1)"
  },
  "babel": {
    "presets": [
      "react",
      "stage-3",
      "node7"
    ]
  },
  "dependencies": {
    "apollo-client": "^0.7.1",
    "arfe": "PoodleApp/arfe",
    "graphql-imap": "PoodleApp/graphql-imap",
    "graphql-tag": "^1.2.3",
    "redux": "^3.6.0"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-preset-node7": "^1.4.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-3": "^6.17.0",
    "flow-bin": "^0.41.0",
    "in-publish": "^2.0.0",
    "watch": "^1.0.1"
  }
}
