{
  "name": "poodle-core",
  "version": "0.1.2",
  "description": "Experimental email client with social features (reusable components)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PoodleApp/poodle-core.git"
  },
  "keywords": [
    "email"
  ],
  "author": "Jesse Hallett <jesse@sitr.us>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/PoodleApp/poodle-core/issues"
  },
  "homepage": "https://github.com/PoodleApp/poodle-core#readme",
  "main": "lib/index.js",
  "scripts": {
    "test": "tape -r babel-register test/**/*_test.js | tap-summary",
    "build": "make",
    "build:watch": "watch 'yarn run build' src",
    "prepublishOnly": "yarn test && yarn run build",
    "prepublish": "(not-in-publish && echo 'Skipping prepublish') || npm run require-npm4-to-publish",
    "require-npm4-to-publish": "semver -r '>=4.0.0' $(npm --version) || (echo 'NPM 4+ required to publish' && exit 1)"
  },
  "babel": {
    "presets": [
      "react",
      "stage-3",
      [
        "env",
        {
          "targets": {
            "electron": "1.6"
          }
        }
      ]
    ]
  },
  "dependencies": {
    "poodle-service": "link:../poodle-service",
    "prop-types": "^15.5.10",
    "redux-slurp": "link:../redux-slurp"
  },
  "devDependencies": {
    "babel-cli": "^6",
    "babel-preset-env": "^1",
    "babel-preset-react": "^6",
    "babel-preset-stage-3": "^6",
    "flow-bin": "^0.50.0",
    "in-publish": "^2",
    "tap-summary": "^3.0.1",
    "tape": "^4.6.3",
    "watch": "^1"
  },
  "files": [
    "lib/"
  ],
  "peerDependencies": {
    "arfe": "*",
    "react": "*",
    "react-redux": "*",
    "redux": "*",
    "redux-saga": "*"
  }
}
